# ============================================
# NexusLogistics Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=nexus
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=nexus_logistics
POSTGRES_HOST=nexus_postgres

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=optional_password_here

# ============================================
# Kafka Configuration
# ============================================
KAFKA_BROKERS=kafka:29092

# ============================================
# Service Ports (internal)
# ============================================
TRACKING_SERVICE_PORT=3000
INGESTION_SERVICE_PORT=50051
ROUTE_SERVICE_PORT=8081

# ============================================
# External API Keys (if needed)
# ============================================
# OPENSKY_API_KEY=optional_for_higher_rate_limits
# MAPBOX_TOKEN=your_mapbox_token_here

# ============================================
# Security Configuration
# ============================================
# JWT_SECRET=your_jwt_secret_here
# RATE_LIMIT_PER_MINUTE=100

# ============================================
# Monitoring
# ============================================
GRAFANA_ADMIN_PASSWORD=admin
